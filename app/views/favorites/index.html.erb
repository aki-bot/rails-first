<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%# <%= topic.user.name %> 
              <h2 class="test2">UserName <%= topic.user.name%><h2>
            </h2>
            <%= image_tag topic.image.url %>
            <%= image_tag 'icons/ハートのマーク5.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>